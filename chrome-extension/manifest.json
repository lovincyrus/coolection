{
  "manifest_version": 3,
  "name": "Coolection",
  "version": "1.1.0",
  "description": "Save the current page to Coolection",
  "permissions": ["activeTab", "scripting", "contextMenus", "storage", "alarms", "tabs", "tabGroups"],
  "host_permissions": ["https://www.coolection.co/*", "https://x.com/i/bookmarks*"],
  "optional_host_permissions": ["https://*/*", "http://localhost/*"],
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Save to Coolection"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/i/bookmarks*"],
      "js": ["bookmarks-content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "save-to-coolection": {
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "MacCtrl+Shift+C"
      },
      "description": "Save current page to Coolection"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/icon-48.png"],
      "matches": ["https://x.com/*"]
    }
  ]
}
